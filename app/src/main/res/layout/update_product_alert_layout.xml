<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="20sp">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Cập Nhật Sản Phẩm"
		android:textSize="20sp"
		android:layout_gravity="center"
		android:layout_marginBottom="20dp"/>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:layout_gravity="center"
			android:text="ID sản phẩm Bạn đang chỉnh sửa: " />
		<TextView
			android:id="@+id/product_id_input"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:textStyle="bold"
			android:layout_gravity="center"
			android:text="null" />
	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="Tên Sản Phẩm:" />
		<EditText
			android:id="@+id/product_name_input"
			android:layout_weight="1"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="text"
			android:text="" />
	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="Số lượng:" />
		<EditText
			android:id="@+id/product_amount_input"
			android:layout_weight="1"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="number"
			android:text="" />
	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="Giá Bán:" />
		<EditText
			android:id="@+id/sellPrice_input"
			android:layout_weight="1"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:text="" />
	</TableRow>
	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="Giá mua:" />
		<EditText
			android:id="@+id/buyPrice_input"
			android:layout_weight="1"
			android:layout_column="1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:inputType="numberDecimal"
			android:text="" />
	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="20sp">
		<Button
			android:id="@+id/btnUpdateProduct"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Cập nhật" />
		<Button
			android:id="@+id/btnCancelProduct"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="12sp"
			android:text="Hủy" />
	</TableRow>
</TableLayout>